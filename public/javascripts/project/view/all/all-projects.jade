div#all-projects-cnt(ng-controller="ProjectCtrl").panel
    .navbar.navbar-default
        .container-fluid
            .navbar-header
                form.navbar-form.navbar-left.form-inline
                    .form-group
                        input.form-control(type="text" placeholder="Filter" ng-model="projectFilter")
                    div#filterLabel.form-group
                        span by
                    .form-group
                        select.form-control(ng-model="filter" ng-options="item.value as item.label for item in filterOptions" ng-init= "filter=filterOptions[0].value")

    .panel.panel-default(ng-repeat="project in projects | filter : projectFilter")
        .panel-heading.panel-heading-custom
            h3.panel-title
                a(href='#/project/{{project._id}}') {{project.name}}
        //.panel-body
        .list-group
            a.list-group-item(href="")
                h4.list-group-item-heading Description
                p.list-group-item-text {{project.description}}
            a.list-group-item(href="")
                h4.list-group-item-heading Overall Time
                p.list-group-item-text {{project.overallTime}} man days
            a.list-group-item(href="")
                h4.list-group-item-heading Participants
                p.list-group-item-text
                    ul.list-inline
                        li(ng-repeat="p in project.participants")
                            button.btn  {{p.name}}
            a.list-group-item(href="")
                h4.list-group-item-heading Progress
                p.list-group-item-text
                    uib-progressbar(id="progress-bar" max="100" type="{{project.progressBarType}}" value="project.progress")
                        span(style="color:white; white-space:nowrap;") Progress: {{project.progress}}%
